<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BancoDigital.App">
    <Application.Resources>
        <Style x:Key="fonteTitulos" TargetType="Label">
            <Setter Property="FontFamily">
                <Setter.Value>
                    <OnPlatform x:TypeArguments="x:String"
                                    Android="fontelogo.ttf#fontelogo" />
                </Setter.Value>
            </Setter>
            <Setter Property="TextColor" Value="White"/>
        </Style>

        <Style x:Key="fonteComum" TargetType="Label">
            <Setter Property="FontFamily">
                <Setter.Value>
                    <OnPlatform x:TypeArguments="x:String"
                                    Android="fontecomum.ttf#fontecomum" />
                </Setter.Value>
            </Setter>
            <Setter Property="TextColor" Value="Black"/>
        </Style>

        <Style x:Key="btn_inicio" TargetType="ImageButton">
            <Setter Property="BackgroundColor" Value="#F3F3F3"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="BorderWidth" Value="10"/>
            <Setter Property="BorderColor" Value="#F3F3F3"/>
            <Setter Property="HeightRequest" Value="80"/>
        </Style>
    </Application.Resources>
</Application>