<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BancoDigital.View.lista" Background="#fff">
    <ContentPage.Content>
        <StackLayout>

            <ActivityIndicator x:Name="carregando" IsRunning="False"/>

            <Label Text="Selecione uma conta" FontSize="22" Style="{StaticResource fonteComum}" Margin="10,0,0,0" />

            <ListView x:Name="lst_contas" RowHeight="60" Margin="10,10,10,10">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid ColumnDefinitions="Auto" RowDefinitions="Auto">
                                <Label Grid.Row="0" Grid.Column="0" x:Name="txt_numero" Text="{Binding tipo}" Style="{StaticResource fonteTitulos}" TextColor="#000" FontSize="23"/>
                                <Label Grid.Row="1" Grid.Column="0" x:Name="txt_tipo" Text="{Binding saldo}" Style="{StaticResource fonteComum}"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Image x:Name="logo" Margin="0,100,0,30" WidthRequest="200"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>