<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BancoDigital.View.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="CPF:" FontSize="20"/>
            <Entry x:Name="txt_cpf" FontSize="20"/>

            <Label Text="Senha:" FontSize="20"/>
            <Entry x:Name="txt_senha" FontSize="20"/>

            <Button Text="ENTRAR" x:Name="btn_entrar"/>
            <Button Text="Cadastro" x:Name="btn_cadastro" Clicked="btn_cadastro_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>